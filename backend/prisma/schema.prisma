generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum RoomCategory {
  STANDARD
  DELUXE
  SUITE
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CHECKED_IN
}

enum PaymentStatus {
  INITIATED
  SUCCESS
  FAILED
}

model User {
  id        String   @id @default(cuid())
  accountId String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  bookings  Booking[]
}

model State {
  id    String @id @default(cuid())
  name  String @unique

  cities City[]
}

model City {
  id      String @id @default(cuid())
  name    String
  stateId String

  state   State  @relation(fields: [stateId], references: [id])
  hotels  Hotel[]

  @@unique([name, stateId])
}

model Hotel {
  id        String  @id @default(cuid())
  name      String
  cityId    String
  rating    Float
  image     String
  amenities Json
  star      Int

  city      City        @relation(fields: [cityId], references: [id])
  rooms     RoomType[]
  bookings  Booking[]
  reviews   Review[]
}

model RoomType {
  id         String        @id @default(cuid())
  hotelId   String
  type       RoomCategory
  priceNight Int

  hotel     Hotel   @relation(fields: [hotelId], references: [id])
  bookings  Booking[]

  @@unique([hotelId, type])
}

model Booking {
  id          String        @id @default(cuid())
  bookingCode String        @unique
  userId      String
  hotelId     String
  roomTypeId  String

  checkIn     DateTime
  checkOut    DateTime

  qrPayload   Json
  status      BookingStatus @default(PENDING)

  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id])
  hotel       Hotel    @relation(fields: [hotelId], references: [id])
  roomType    RoomType @relation(fields: [roomTypeId], references: [id])
  payment     Payment?
}

model Payment {
  id         String        @id @default(cuid())
  bookingId String        @unique
  provider   String        // e.g. "razorpay"
  reference  String?       // payment_id from gateway
  status     PaymentStatus @default(INITIATED)
  createdAt  DateTime      @default(now())

  booking    Booking @relation(fields: [bookingId], references: [id])
}

model Review {
  id        String   @id @default(cuid())
  hotelId  String
  rating   Float
  comment  String
  createdAt DateTime @default(now())

  hotel    Hotel @relation(fields: [hotelId], references: [id])
}